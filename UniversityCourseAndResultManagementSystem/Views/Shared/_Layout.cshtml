<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/myStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("University Course and Result Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <div class="dropdown">
                        <button class="dropbtn">
                            Department
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="dropdown-content">
                            <li>@Html.ActionLink("Save Department", "SaveDepartment", "Department")</li>
                            <li>@Html.ActionLink("Show Department", "ShowDepartment", "Department")</li>
                        </div>
                    </div>
                    <li>@Html.ActionLink("Course", "SaveCourse", "Course")</li>
                    <li>@Html.ActionLink("Teacher", "SaveTeacher", "Teacher")</li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    <div>
        <br/>
        @RenderBody()
    </div>
   
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
